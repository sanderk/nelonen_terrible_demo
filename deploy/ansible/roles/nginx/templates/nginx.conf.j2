#jinja2: trim_blocks: "true", lstrip_blocks: "false"
user {{ nginx_user }};
worker_processes auto;
worker_rlimit_nofile {{ nginx_worker_rlimit_nofile }};

pid        /var/run/nginx.pid;
error_log  /var/log/nginx/error.log;


events {
  worker_connections {{ nginx_events_worker_connections }};
  {% if nginx_events_extra_config is defined %}
    {% for config in nginx_events_extra_config %}
  {{ config.name }}   {{ config.value}};
    {% endfor %}
  {% endif %}
}

http {
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;

  access_log  /var/log/nginx/access.log;

  sendfile {% if nginx_sendfile %}on{% else %}off{% endif %};
  tcp_nopush on;

  server_tokens off;

  types_hash_max_size 1024;
  types_hash_bucket_size 512;

  server_names_hash_bucket_size 128;
  server_names_hash_max_size 512;

  keepalive_timeout  {{ nginx_keepalive_timeout }};
  tcp_nodelay        on;

{% include "nginx.conf.fragment.cache_paths.j2" with context %}

  gzip         on;
  gzip_disable "MSIE [1-6]\.(?!.*SV1)";

  client_body_temp_path   /var/nginx/client_body_temp;
  client_max_body_size    {{ nginx_client_max_body_size }};
  client_body_buffer_size {{ nginx_client_body_buffer_size }};
  proxy_redirect          off;
  proxy_temp_path         /var/nginx/proxy_temp;
  proxy_connect_timeout   {{ nginx_proxy_connect_timeout }};
  proxy_send_timeout      {{ nginx_proxy_send_timeout }};
  proxy_read_timeout      {{ nginx_proxy_read_timeout }};
  proxy_buffers           32 8k;
  proxy_buffer_size       8k;
  proxy_http_version      1.0;
  proxy_set_header        Host $host;
  proxy_set_header        X-Real-IP $remote_addr;
  proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_headers_hash_bucket_size 64;

  log_format combined_microseconds "$http_juniperclientipaddr - $remote_user [$time_local] \"$request\" $status $bytes_sent \"$http_referer\" \"$http_user_agent\" \"$request_time\"";

  {% for k, v in nginx_log_formats.iteritems() %}
  log_format {{ k }} {{ v }};
  {% endfor %}

  include /etc/nginx/conf.d/*.conf;
  include /etc/nginx/sites-enabled/*;
}
